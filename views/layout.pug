doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title || 'HIS - Sistema Hospitalario'
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Geist+Mono:wght@100..900&family=Geist:wght@100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    link(rel='stylesheet', href='/main.css')
  body
    header
      nav
        ul
          li
            a(href="/") Inicio
          if locals.usuarioLogueado && usuarioLogueado.nombreUsuario
            li
              span Bienvenido, #{usuarioLogueado.nombreUsuario} (#{usuarioLogueado.rol})
            li
              a(href="/logout") Cerrar Sesión
          else
            li
              a(href="/login") Iniciar Sesión
            li
              a(href="/registro") Registrarse

    main.container
      block content
