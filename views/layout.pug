doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title || 'HIS - Sistema Hospitalario'
    link(rel='stylesheet', href='/main.css')
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Geist+Mono:wght@100..900&family=Geist:wght@100..900&display=swap" rel="stylesheet">
  body
    header
      nav
        ul
          li
            a(href="/") Inicio
          if locals.usuarioLogueado && usuarioLogueado.nombreUsuario
            li
              span Bienvenido, #{usuarioLogueado.nombreUsuario} (#{usuarioLogueado.rol})
            li
              a(href="/admisiones/nueva") Nueva Admisión
            li
              a(href="/logout") Cerrar Sesión
          else
            li
              a(href="/login") Iniciar Sesión
            li
              a(href="/registro") Registrarse

    main.container
      block content

    footer
      p &copy; #{new Date().getFullYear()} HIS - Sistema Hospitalario - Federico Grippo © 2025
