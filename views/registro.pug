extends layout

block content
  .row.justify-content-center
    .col-md-8.col-lg-6

      .card.shadow-lg.border-0.rounded-lg.mt-5
        .card-header
          h3.text-center.font-weight-light.my-4= title || 'Crear Nueva Cuenta'
        .card-body
          if error
            .alert.alert-danger(role="alert")= error
          if success_msg
            .alert.alert-success(role="alert")= success_msg

          form(method="POST", action="/registro")
            .mb-3
              label.form-label(for="nombreUsuario") Nombre de Usuario
              input.form-control(type="text", id="nombreUsuario", name="nombreUsuario", required, placeholder="Elige un nombre de usuario", value=formData && formData.nombreUsuario ? formData.nombreUsuario : '')

            .mb-3
              label.form-label(for="contraseña") Contraseña
              input.form-control(type="password", id="contraseña", name="contraseña", required, placeholder="Crea una contraseña segura")

            .d-grid.mt-4
              button.btn.btn-primary.btn-lg(type="submit") Registrarse

        .card-footer.text-center.py-3
          .small
            | ¿Ya tenes una cuenta?
            a(href="/login") Inicia Sesión
